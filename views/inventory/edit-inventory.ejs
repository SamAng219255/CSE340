<h1><%= title %></h1>

<%- messages() %>

<div id="login-box">
  <% if (errors) { %>
    <ul class="error-notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
  <form action="/inv/edit/" method="post" class="requires-update">
    <label>
      Make
      <input type="text" name="inv_make" value="<%= locals.inv_make %>" required>
      <span class="required-note">*Required.</span>
    </label>
    <label>
      Model
      <input type="text" name="inv_model" value="<%= locals.inv_model %>" required>
      <span class="required-note">*Required.</span>
    </label>
    <label>
      Year
      <input type="number" min="1000" max="9999" step="1" name="inv_year" value="<%= locals.inv_year %>" required>
      <span class="required-note">*Required. Must be a four (4) digit year.</span>
    </label>
    <label>
      Description
      <textarea name="inv_description" required><%= locals.inv_description %></textarea>
      <span class="required-note">*Required.</span>
    </label>
    <label>
      Image Path
      <input type="text" name="inv_image" value="<%- locals.inv_image %>" required>
      <span class="required-note">*Required.</span>
    </label>
    <label>
      Thumbnail Path
      <input type="text" name="inv_thumbnail" value="<%- locals.inv_thumbnail %>" required>
      <span class="required-note">*Required.</span>
    </label>
    <label>
      Price
      <input type="number" min="1" max="999999999" step="1" name="inv_price" value="<%= locals.inv_price %>" required>
      <span class="required-note">*Required. Must be a whole number of dollars.</span>
    </label>
    <label>
      Miles
      <input type="number" min="0" step="1" name="inv_miles" value="<%= locals.inv_miles %>" required>
      <span class="required-note">*Required. Must be a whole number of miles.</span>
    </label>
    <label>
      Color
      <input type="text" name="inv_color" value="<%= locals.inv_color %>" required>
      <span class="required-note">*Required.</span>
    </label>
    <label>
      Classification
      <select name="classification_id" id="classification_id" required>
        <%- locals.classificationOptions %>
      </select>
      <span class="required-note">*Required.</span>
    </label>
    <input type="submit" value="Edit Item" disabled>
    <input type="hidden" name="inv_id"<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"<% } %>>
  </form>
</div>